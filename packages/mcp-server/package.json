{
  "name": "@mux/mcp",
  "version": "12.1.0",
  "description": "The official MCP Server for the Mux API",
  "author": "Mux <devex@mux.com>",
  "types": "dist/index.d.ts",
  "main": "dist/index.js",
  "type": "commonjs",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/muxinc/mux-node-sdk.git",
    "directory": "packages/mcp-server"
  },
  "homepage": "https://github.com/muxinc/mux-node-sdk/tree/main/packages/mcp-server#readme",
  "license": "Apache-2.0",
  "packageManager": "yarn@1.22.22",
  "private": false,
  "scripts": {
    "test": "jest",
    "build": "bash ./build",
    "prepack": "echo 'to pack, run yarn build && (cd dist; yarn pack)' && exit 1",
    "prepublishOnly": "echo 'to publish, run yarn build && (cd dist; yarn publish)' && exit 1",
    "format": "prettier --write --cache --cache-strategy metadata . !dist",
    "prepare": "npm run build",
    "tsn": "ts-node -r tsconfig-paths/register",
    "lint": "eslint --ext ts,js .",
    "fix": "eslint --fix --ext ts,js ."
  },
  "dependencies": {
    "@mux/mux-node": "file:../../dist/",
    "@modelcontextprotocol/sdk": "^1.11.5",
    "yargs": "^17.7.2",
    "@cloudflare/cabidela": "^0.2.4",
    "zod": "^3.25.20",
    "zod-to-json-schema": "^3.24.5"
  },
  "bin": {
    "mcp-server": "dist/index.js"
  },
  "devDependencies": {
    "@types/jest": "^29.4.0",
    "@typescript-eslint/eslint-plugin": "8.31.1",
    "@typescript-eslint/parser": "8.31.1",
    "eslint": "^8.49.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-unused-imports": "^3.0.0",
    "jest": "^29.4.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.1.0",
    "ts-morph": "^19.0.0",
    "ts-node": "^10.5.0",
    "tsc-multi": "https://github.com/stainless-api/tsc-multi/releases/download/v1.1.8/tsc-multi.tgz",
    "tsconfig-paths": "^4.0.0",
    "typescript": "5.8.3"
  },
  "imports": {
    "@mux/mcp": ".",
    "@mux/mcp/*": "./src/*"
  },
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "default": "./dist/index.mjs"
    },
    "./*.mjs": "./dist/*.mjs",
    "./*.js": "./dist/*.js",
    "./*": {
      "require": "./dist/*.js",
      "default": "./dist/*.mjs"
    }
  }
}
